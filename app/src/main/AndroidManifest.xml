<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.nullify.mobielomart">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Activity.HomeActivity.HomeActivity"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activity.SearchResult.SearchResultActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.OrdersActivity.OrdersActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.WishListActivity.WishlistActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.TrackActivity.TrackActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.EditAccountActivity.EditAccountActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.ProductActivity.ProductActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.SigninActivity.SignInActivity"
            android:theme="@style/SigninTheme"
            android:windowSoftInputMode="adjustPan|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.NewArrivalActivity.NewArivalActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.BestOffers.BestOfferActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.FeaturedProducts.FeaturedProducts"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.InterestActivity.InterestActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.AddressActivity.AddressActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".Activity.RecentView.RecentlyViewedActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity android:name=".Activity.ProductActivity.WishProductActivity"
            android:theme="@style/AppTheme.NoActionbar"/>
    </application>

</manifest>